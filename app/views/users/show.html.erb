<h1><%= @user.name%></h1>
<p><%= @user.email%></p>

<%= render partial: "profile_logic", locals: {user: @user} %>

<%= render partial: "request_logic", locals: {user: @user} %>

<h3>All created posts</h3>
<ul>
    <% @user.posts.each do |post| %>
        <li><%= link_to post.title, post %></li>
    <%end%>
</ul>

<h3>All friends</h3>
<ul>
    <% @user.friends.each do |fr| %>
        <li><%= link_to fr.name, fr %> 
        <% if current_user == @user %>
            <%= button_to "Unfriend", request_path, params: {user_id: @user.id, friend_id: fr.id}, method: :delete %>
        <%end%></li>
    <%end%>
</ul>
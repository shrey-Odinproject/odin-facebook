<h1><%= @post.title %></h1>
<h3><%= @post.body %></h3>

<% if current_user == @post_author %>
    <%= link_to "Edit", edit_post_path(@post) %> <br><br>
    <%= link_to "Destroy", post_path(@post), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
<%end %>